# some parameters for ic1ion - calculation of magnetisation
#----------------------------------------------------------
calcmag
 xT   = 1
 xHa  = 0
 xHb  = 0
 xHc  = 0
 xmin = 1
 xstep= 1
 xmax = 300
 yT   = 0
 yHa  = 0
 yHb  = 0
 yHc  = 1
 ymin = 1
 ystep= 1
 ymax = 1



